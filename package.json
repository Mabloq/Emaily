  "name": "emaily",
  "version": "1.0.0",
  "description": "send emails and get feedback",
  "main": "index.js",
  "engines": {
    "node": "8.1.4",
    "npm": "5.3.0"
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm run start --prefix client",
    "sass-watch": "npm run watch-css --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run webhooks\" \"npm run sass-watch\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client && npm run build-css --prefix client",
    "webhooks": "./sendgrid_webhook.sh"
  },
  "dependencies": {
    "ajv": "^5.5.0",
    "axios": "^0.17.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.0",
    "cookie": "^0.3.1",
    "cookie-session": "^1.3.2",
    "express": "^4.16.1",
    "jsonfile": "^4.0.0",
    "localtunnel": "^1.8.3",
    "lodash": "^4.17.4",
    "mongoose": "^4.11.14",
    "node-sass-chokidar": "0.0.3",
    "nodemon": "^1.12.1",
    "normalize.css": "^7.0.0",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "path-parser": "^2.0.2",
    "react-email-editor": "^0.5.0",
    "sendgrid": "^5.2.3",
    "session": "^0.1.0",
    "stripe": "^5.1.1"
  },
  "devDependencies": {
    "webpack": "^3.8.1"
  }
}
